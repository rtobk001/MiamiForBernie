<script type="text/javascript">
    $(document).ready(function(){

        var hoveringImageFlag = {leftImage: false, centerImage: false, rightImage: false};
        $(".mainImages").hover(function(){//hover on
            var imageId = this.id;
            var coverId = "#" + imageId + "Cover";

            hoveringImageFlag[imageId] = true;

            $(coverId).animate({
                top: "40%",
                bottom: "40%"
            }, 500, function(){//end of animation
                if(hoveringImageFlag[imageId]){
                    var text = coverId + " > h3";
                    $(text).removeClass("hidden");//show text
                }
            });


        }, function(){//hover off
            var imageId = this.id;
            var coverId = "#" + imageId + "Cover";

            hoveringImageFlag[imageId] = false;

            var text = coverId + " > h3";
            $(text).addClass("hidden");//hide text
            $(coverId).animate({
                top: "0",
                bottom: "0"
            }, 500);
        });
    });
</script>
